# =============================================================================
# ElevenLabs Agent API Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# =============================================================================
# ElevenLabs API Settings (Required)
# =============================================================================

# Your ElevenLabs API key (required)
ELEVENLABS_API_KEY=your_api_key_here

# ElevenLabs API base URL (optional, defaults to official API)
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# =============================================================================
# ElevenLabs Client Settings (Optional)
# =============================================================================

# Request timeout in seconds (default: 30)
ELEVENLABS_TIMEOUT=30

# Maximum retry attempts for failed requests (default: 3)
ELEVENLABS_MAX_RETRIES=3

# Delay between retries in seconds (default: 1.0)
ELEVENLABS_RETRY_DELAY=1.0

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
ELEVENLABS_LOG_LEVEL=INFO

# =============================================================================
# FastAPI Server Settings (Optional)
# =============================================================================

# Server host (default: 0.0.0.0)
API_HOST=0.0.0.0

# Server port (default: 8000)
API_PORT=8000

# Enable auto-reload for development (default: true)
API_RELOAD=true

# Server log level: debug, info, warning, error, critical (default: info)
API_LOG_LEVEL=info

# Number of worker processes for production (default: 1)
# Only used when API_RELOAD=false
API_WORKERS=4
